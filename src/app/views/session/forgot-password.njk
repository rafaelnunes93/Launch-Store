{% extends "layout.njk" %}

{% import "parts/card.njk" as card %}

{% block content %}


{%call card.render('Esqueceu a senha?', 'password container form')%}
  
 <form method="POST" action="/users/forgot-password" >
            <div class="fields">
                <div class="item">
                <div>Email</div>
                    <div class="input">
                        <input
                        type="email"
                        name="email"
                        placeholder="Digite Seu Email"
                        value="{{user.email}}"
                        onblur="Validate.apply(this,'isEmail')"
                        required
                        >
                    
                    </div>
                </div>
            </div>

            <button class="button" type="submit">Recuperar Senha</button>


    </form>

    {%endcall%}

{% endblock content %}